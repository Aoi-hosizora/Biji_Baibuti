<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:baselineAligned="false"
    android:elevation="2dp"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/trans"
            android:clickable="false"
            android:contentDescription="@string/todo"
            android:src="@drawable/tab_note_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_note"
            android:textColor="@color/image_color_black"
            android:contentDescription="@string/todo"
            android:textSize="@dimen/bottom_nav_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/trans"
            android:clickable="false"
            android:contentDescription="@string/todo"
            android:src="@drawable/tab_search_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_search"
            android:textColor="@color/image_color_black"
            android:contentDescription="@string/todo"
            android:textSize="@dimen/bottom_nav_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/trans"
            android:clickable="false"
            android:contentDescription="@string/todo"
            android:src="@drawable/tab_class_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_schedule"
            android:textColor="@color/image_color_black"
            android:contentDescription="@string/todo"
            android:textSize="@dimen/bottom_nav_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/trans"
            android:clickable="false"
            android:contentDescription="@string/todo"
            android:src="@drawable/tab_file_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_file"
            android:textColor="@color/image_color_black"
            android:contentDescription="@string/todo"
            android:textSize="@dimen/bottom_nav_text_size" />

    </LinearLayout>

</LinearLayout>