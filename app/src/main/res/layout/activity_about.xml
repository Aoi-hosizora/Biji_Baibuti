<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/id_about_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/app_icon"
            android:contentDescription="@string/todo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:text="笔迹"/>

        <TextView
            android:id="@+id/id_about_txt_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="V1.2.0"/>

        <TextView
            android:id="@+id/id_about_txt_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:text="By SCUT 2017\n郑东润 郭晓凡 刘莹灿 蔡镇峰 陈楷婷\nOf Baibuti 2018-2019\nhttps://github.com/Aoi-hosizora/Biji_Baibuti"/>
    </LinearLayout>

    <Button
        android:id="@+id/id_about_btn_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="检查更新"
        app:layout_constraintTop_toBottomOf="@id/id_about_header"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_white" />

    <Button
        android:id="@+id/id_about_btn_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="反馈"
        app:layout_constraintTop_toBottomOf="@id/id_about_btn_version"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_white" />

    <TextView
        android:id="@+id/id_about_txt_copyright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copyright © 2018-2019 | All Rights Reserved."
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_horizontal"
        android:layout_marginBottom="12dp"/>

</android.support.constraint.ConstraintLayout>