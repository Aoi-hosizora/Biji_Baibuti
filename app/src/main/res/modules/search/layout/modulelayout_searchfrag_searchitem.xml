<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_margin_8"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/id_adapter_SearchItem_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="搜索结果标题"
                android:maxLines="1"
                android:textColor="@color/grey_900"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/id_adapter_SearchItem_Url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="www.baidu.com"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:singleLine="true"
                android:textColor="@color/grey_500"
                android:textSize="@dimen/text_size_12"
                android:layout_below="@id/id_adapter_SearchItem_Title"/>

            <TextView
                android:id="@+id/id_adapter_SearchItem_Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="搜索结果内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
                android:layout_marginTop="2dp"
                android:textColor="@color/grey_700"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:textSize="@dimen/text_size_14"
                android:layout_below="@id/id_adapter_SearchItem_Url" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

