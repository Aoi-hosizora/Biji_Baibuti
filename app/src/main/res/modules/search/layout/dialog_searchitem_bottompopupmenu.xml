<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/popUpMenu_paddingBottom"
    android:paddingStart="@dimen/popUpMenu_paddingStart"
    android:paddingEnd="@dimen/popUpMenu_paddingEnd"
    android:paddingTop="@dimen/popUpMenu_paddingTop">

    <TextView
        android:id="@+id/id_SearchFrag_PopupMenu_Label"
        android:layout_width="match_parent"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:text="@string/SearchFrag_PopupMenu_Label"
        android:layout_height="@dimen/popUpMenu_cnt_txt_layout_height"
        android:layout_marginTop="@dimen/popUpMenu_cnt_layout_marginTop"
        android:textSize="@dimen/popUpMenu_cnt_txt_textSize"
        android:textColor="@color/popUpMenu_txt_textColor"
        android:background="@color/popUpMenu_bgColor"
        />

    <Button
        android:id="@+id/id_SearchFrag_PopupMenu_Star"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="@string/SearchFrag_PopupMenu_Star"
        android:layout_height="@dimen/popUpMenu_cnt_btn_layout_height"
        android:layout_marginTop="@dimen/popUpMenu_cnt_layout_marginTop"
        android:textSize="@dimen/popUpMenu_cnt_btn_textSize"
        android:textColor="@color/popUpMenu_btn_textColor"
        android:background="@color/popUpMenu_bgColor"
        />

    <Button
        android:id="@+id/id_SearchFrag_PopupMenu_More"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="@string/SearchFrag_PopupMenu_More"
        android:layout_height="@dimen/popUpMenu_cnt_btn_layout_height"
        android:layout_marginTop="@dimen/popUpMenu_cnt_layout_marginTop"
        android:textSize="@dimen/popUpMenu_cnt_btn_textSize"
        android:textColor="@color/popUpMenu_btn_textColor"
        android:background="@color/popUpMenu_bgColor"/>

    <Button
        android:id="@+id/id_SearchFrag_PopupMenu_Cancel"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="@string/SearchFrag_PopupMenu_Cancel"
        android:layout_height="@dimen/popUpMenu_cnt_btn_layout_height"
        android:layout_marginTop="@dimen/popUpMenu_cnt_layout_bottomMarginTop"
        android:textSize="@dimen/popUpMenu_cnt_btn_textSize"
        android:textColor="@color/popUpMenu_btn_textColor"
        android:background="@color/popUpMenu_bgColor"
        />
</LinearLayout>