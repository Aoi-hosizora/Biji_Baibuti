<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="10dp"
        android:text="@string/GroupDialog_Title"
        android:textSize="20sp"
        android:textColor="#000000"/>

    <ListView
        android:id="@+id/id_GroupDialog_GroupListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/groupDlgButtonHeight"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/groupDlgActionLayoutTopMargin"
        android:layout_marginBottom="@dimen/groupDlgActionLayoutBottomMargin">

        <Button
            android:id="@+id/id_GroupDialog_ButtonUp"
            android:layout_width="@dimen/groupDlgButtonSmallWidth"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/groupDlgStartEndMargin"

            android:text="@string/GroupDialog_UE"
            android:theme="@style/DlgFlatButton"
            />

        <Button
            android:id="@+id/id_GroupDialog_ButtonDown"
            android:layout_width="@dimen/groupDlgButtonSmallWidth"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/groupDlgButtonMargin"

            android:text="@string/GroupDialog_SHITA"
            android:theme="@style/DlgFlatButton"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/id_GroupDialog_ButtonDelete"
            android:layout_width="@dimen/groupDlgButtonLargeWidth"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/groupDlgButtonMargin"

            android:text="@string/GroupDialog_Delete"
            android:theme="@style/DlgFlatButton"
            />

        <Button
            android:id="@+id/id_GroupDialog_ButtonAdd"
            android:layout_width="@dimen/groupDlgButtonLargeWidth"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/groupDlgButtonMargin"

            android:text="@string/GroupDialog_Add"
            android:theme="@style/DlgFlatButton"
            />

        <Button
            android:id="@+id/id_GroupDialog_ButtonEdit"
            android:layout_width="@dimen/groupDlgButtonLargeWidth"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/groupDlgButtonMargin"

            android:text="@string/GroupDialog_Edit"
            android:theme="@style/DlgFlatButton"
            />

        <Button
            android:id="@+id/id_GroupDialog_ButtonCancel"
            android:layout_width="@dimen/groupDlgButtonLargeWidth"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/groupDlgStartEndMargin"

            android:text="@string/GroupDialog_Return"
            android:theme="@style/DlgFlatButton"
            />

    </LinearLayout>

</LinearLayout>
