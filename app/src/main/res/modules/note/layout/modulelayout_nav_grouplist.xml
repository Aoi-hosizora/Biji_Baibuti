<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/NoteFrag_GroupingRightTextView"
        android:textSize="20sp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"/>

    <ListView
        android:id="@+id/id_NoteFrag_nav_GroupList"
        android:layout_width="match_parent"
        android:layout_marginBottom="6dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/id_NoteFrag_nav_GroupMgrButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/NoteFrag_GroupingMgrRightTextView"
        android:height="60dp"
        android:theme="@style/DlgFlatButton"/>
</LinearLayout>