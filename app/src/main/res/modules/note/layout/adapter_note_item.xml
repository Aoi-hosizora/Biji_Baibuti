<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_note"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_margin_8"
        android:background="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_list_titletime">

            <com.baibuti.biji.ui.widget.otherView.EllipsizeTextView
                android:id="@+id/tv_list_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:maxLines="1"
                android:layout_marginEnd="4dp"
                android:text="标题"
                android:textColor="@color/grey_900"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/tv_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="2dp"
                android:text="03-30 4:43"
                android:textColor="@color/grey_600"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/tv_list_titletime">

            <TextView
                android:id="@+id/tv_list_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="75dp"
                android:maxLines="2"
                android:text="笔记摘要笔记摘要笔记摘要笔记摘要笔记摘要笔记摘要笔记摘要笔记摘要笔记摘要笔记摘要笔记摘要笔记摘要笔记摘要笔记摘要"
                android:textColor="@color/grey_700"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_list_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="计算机网络"
                android:textColor="@color/grey_400"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>